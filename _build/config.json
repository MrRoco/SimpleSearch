    "elements": {
      "plugins": [
        {
          "name": "SimpleSearchIndexer",
          "file": "plugin.simplesearchindexer.php",
          "events": [
            "OnDocFormSave",
            "OnDocPublished",
            "OnDocUnPublished",
            "OnResourceDuplicate",
            "OnResourceDelete",
            "OnResourceUndelete"
          ]
        }
      ],
      "snippets": [
        {
          "name": "SimpleSearch"
        },
        {
          "name": "SimpleSearchForm"
        },
        {
